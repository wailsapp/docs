
.theme-container.homepage-class {
  h2 {
    text-align: center;
    color: black;
  }

  .theme-container {
    color: black;
  }

  .home .hero .action-button {
    display: inline-block;
    font-size: 1.1rem;
    background-color: white
    border: 2px solid black;
    color: #000;
    padding: 0.3rem 0.7rem;
    border-radius: 6px;
    transition: 0.2s ease;
    box-sizing: border-box;
  }

  .home .footer {
    padding: 2.5rem;
    border-top: 1px solid #eaecef;
    text-align: center;
    color: #000;
  }

 .home .hero .action-button:hover {
    display: inline-block;
    font-size: 1.1rem;
    background-color: red;
    border: 2px solid red;
    color: #fff;
    padding: 0.3rem 0.7rem;
    border-radius: 6px;
    transition: 0.2s ease;
    box-sizing: border-box;
  }

  .home .hero .description {
    margin-top: -3rem;
    color: #000;
  }

  .home .feature p {
    color: #000;
  }
}
.theme-container.concepts-class {
  img {
    display:block;
    margin: 0 auto;
  }
}